#!/bin/bash

# Output CSV file
CSV_FILE="pokemon_report.csv"

# Write header
echo "Name,Height(m),Weight(kg)" > "$CSV_FILE"

# Loop through all JSON files
for file in *.json; do
	name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")   # decimeters
    weight=$(jq -r '.weight' "$file")   # hectograms

    # Convert to meters & kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$CSV_FILE"
done

echo "CSV report saved to $CSV_FILE"

# Calculate averages with awk
awk -F, 'NR>1 {h+=$2; w+=$3; count++} END {print "Average Height(m): " h/count; print "Average Weight(kg): " w/count}' "$CSV_FILE
~
